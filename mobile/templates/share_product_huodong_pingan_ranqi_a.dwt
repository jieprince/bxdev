			window.location.href='../mobile/spring_activity.php?act=share_active&uid='+temp_uid.split(',')[0];
		}else{
			window.location.href='user.php';
		}
	}
	function selectProduct(){
		var data = is_login();
		var temp_uid = data.uid;
		if(temp_uid){
 
			var html_pr = '<div align=center><a href="javascript:go_insure({$ranqi_gid},{$activity_id},1);" class="btn-c30d23"><i class="fa fa-plane left-20"></i>平安行境外旅游保险<i class="fa fa-angle-right right-20"></i></a></div>';
			layer.open({
				content: html_pr,
				title:'选择产品',
				fixed:true,
				style:'width:'+document.documentElement.clientWidth+'px;'
			});
		}else{
			window.location.href='user.php';
		}
	}
	
	

	//判断是否有赠送值
	function get_give_count(uid){
		var flag=true;
		var ranqi_gid = '{$ranqi_gid}';
		 
		var activity_id = '{$activity_id}';
		 
		if(!activity_id){
			alert("不是活动期间！");
			return;
		}
		
	    $.ajax({
		    type : "post",
		    url : "spring_activity.php?act=get_give_count",
		    data : "uid=" + uid+"&ranqi_gid="+ranqi_gid+"&activity_id="+activity_id,
		    async : false,
		    dataType:'json',
		    success : function(data){
		    	if(data.code==0){
					var surplus_num = data.jn_surplus_num;
					 
					var msg = "";
					if(surplus_num<=0){
						msg = '境内产品已分享数额已满，如需更多分享数量，可以推荐代理人';
					}
					 
					if(surplus_num<=0 && jw_surplus_num<=0){
						flag=false;
						
					}
				}
		    	
		    }
	    });
		
		return flag;
		
	}
	
	//领取某个产品的时候做判断
	function go_insure(gid,activity_id,url_type){
		if(activity_id==0){
			alert('不是活动期间');
			return;
		}
		
		var uid = '{$user_id}';
		var url_huodong_ranqi = "{$url_huodong_ranqi}";
		 
		if(url_type==1){
			url=url_huodong_ranqi;
		}else if(url_type==2){
			url=url_huodong_ranqi;
		}
		
	    $.post('spring_activity.php?act=go_insure',{
	    		'uid':uid,
	    		'url':url,
	    		'gid':gid
	    	
	    },function(data){
				if(data.code==0){
					window.location.href="../"+data.url;
				}else if(data.code==10){
					alert(data.msg);
				}else if(ata.code==11){
					alert(data.msg);
				}
	    },'json');
	    
	}
	
	
	//去推荐
	function goto_affiliate(){
		window.location="user.php?act=affiliate";
	}
	
	//关闭
	function close_dialog(){
		layer.close(i_search);
	}
	
	function is_login(){
		var data="";
	    $.ajax({
		    type : "post",
		    url : "spring_activity.php?act=is_login",
		    async : false,
		    dataType:'json',
		    success : function(r){
		    	data = r;
		    }
	    });
	    return data;
	}
