<script>
	var i_search;
	$().ready(function(e) {

        document.addEventListener('WeixinJSBridgeReady',
		function onBridgeReady() {WeixinJSBridge.call('hideOptionMenu');WeixinJSBridge.call('hideToolbar');});
		new Marquee("photoList",0,1,"100%",20,50,0,0,0);
    });
	
	function show_info(){
		var data = is_login();
		var temp_uid = data.uid;
		//var is_cheackT = $('#is_cheack').val();
		if(temp_uid){
		    if(!data.is_cheack){
		    	alert('非正式会员！无法分享,请完善个人资料,提交审核');
		    	window.location.href='user.php?act=profile';
		    	return;
		    }
			
			var jn_activity_id = '{$jn_activity_id}';
			var jw_activity_id = '{$jw_activity_id}';
			if(jw_activity_id==0 && jn_activity_id==0){
				alert("不是活动期间！");
				return;
			}
			
			var jn_total_remainder = '{$jn_total_remainder}';
			var jw_total_remainder = '{$jw_total_remainder}';

			if(jn_total_remainder<=0 && jw_total_remainder<=0){
				alert("抱歉，产品已售完！");
				return;
			}
			
			
			var flag = get_give_count(temp_uid);
			if(!flag){
		 		i_search = layer.open({
				    content: $('#share_dialog').html(),
				    shadeClose: true
				}); 
				return;
			}
			/*var html_temp = '<div align=right><img src="../mobile_page/images/bg_jt.png"></div><div style="border-radius: 5px; background: #fff; padding:20px 10px;"><span style="color:#090">点击右上角,选择分享【朋友】或者【朋友圈】，给他们送代金券啦!</span></div>';
			layer.open({
				content: html_temp,
				fixed:false,
				style:'width:'+document.documentElement.clientWidth+'px;background: none;',
				top:0
			});*/
	
			document.location.href = 'spring_activity.php?act=getc&uid='+temp_uid;
		}else{
			alert("请先登录 ");
			window.location.href='user.php';
		}
	}
	//推荐给好友
	function push_f(){
		var data = is_login();
		var temp_uid = data.uid;
		if(temp_uid){
			//window.location.href='../mobile_page/share_active.html?uid='+temp_uid.split(',')[0];
			window.location.href='../mobile/spring_activity.php?act=share_active&uid='+temp_uid.split(',')[0];
		}else{
			window.location.href='user.php';
		}
	}
	function selectProduct(){
		var data = is_login();
		var temp_uid = data.uid;
		if(temp_uid){
/* 			{$url_huodong_jingwailvyou}
			{$url_huodong_jingneilvyou} */
			//var html_pr = '<div align=center><a href="..{$url_huodong_jingwailvyou}" class="btn-c30d23">平安境外旅游产品</a></div><div align=center><a href="..{$url_huodong_jingneilvyou}" class="btn-c30d23">平安境内旅游产品</a></div>';
			var html_pr = '<div align=center><a href="javascript:go_insure({$jw_gid},{$jw_activity_id},1);" class="btn-c30d23"><i class="fa fa-plane left-20"></i>平安行境外旅游保险<i class="fa fa-angle-right right-20"></i></a></div>'+
						  '<div align=center><a href="javascript:go_insure({$jn_gid},{$jn_activity_id},2);" class="btn-c30d23"><i class="fa fa-train left-20"></i><span>平安境内旅游保险</span><i class="fa fa-angle-right right-20"></i></a></div>';
			layer.open({
				content: html_pr,
				title:'选择产品',
				fixed:true,
				style:'width:'+document.documentElement.clientWidth+'px;'
			});
		}else{
			window.location.href='user.php';
		}
	}
	
	

	//判断是否有赠送值
	function get_give_count(uid){
		var flag=true;
		var jn_gid = '{$jn_gid}';
		var jw_gid = '{$jw_gid}';
		var jn_activity_id = '{$jn_activity_id}';
		var jw_activity_id = '{$jw_activity_id}';
		
		if(!jn_activity_id){
			alert("不是活动期间！");
			return;
		}
		
	    $.ajax({
		    type : "post",
		    url : "spring_activity.php?act=get_give_count",
		    data : "uid=" + uid+"&jn_gid="+jn_gid+"&jw_gid="+jw_gid+"&jn_activity_id="+jn_activity_id+"&jw_activity_id="+jw_activity_id,
		    async : false,
		    dataType:'json',
		    success : function(data){
		    	if(data.code==0){
					var jn_surplus_num = data.jn_surplus_num;
					var jw_surplus_num = data.jw_surplus_num;
					var msg = "";
					if(jn_surplus_num<=0){
						msg = '境内产品已分享数额已满，如需更多分享数量，可以推荐代理人';
					}
					if(jw_surplus_num<=0){
						if(msg){
							flag=false;
						}else{
							msg = '境外产品已分享数额已满，如需更多分享数量，可以推荐代理人';
						}
						
					}
					if(jn_surplus_num<=0 && jw_surplus_num<=0){
						flag=false;
						
					}
				}
		    	
		    }
	    });
		
		return flag;
		
	}
	
	//领取某个产品的时候做判断
	function go_insure(gid,activity_id,url_type){
		if(activity_id==0){
			alert('不是活动期间');
			return;
		}
		
		var uid = '{$user_id}';
		var url_huodong_jingwailvyou = "{$url_huodong_jingwailvyou}";
		var url_huodong_jingneilvyou = "{$url_huodong_jingneilvyou}";
		if(url_type==1){
			url=url_huodong_jingwailvyou;
		}else if(url_type==2){
			url=url_huodong_jingneilvyou;
		}
		
	    $.post('spring_activity.php?act=go_insure',{
	    		'uid':uid,
	    		'url':url,
	    		'gid':gid
	    	
	    },function(data){
				if(data.code==0){
					window.location.href="../"+data.url;
				}else if(data.code==10){
					alert(data.msg);
				}else if(ata.code==11){
					alert(data.msg);
				}
	    },'json');
	    
	}
	
	
	//去推荐
	function goto_affiliate(){
		window.location="user.php?act=affiliate";
	}
	
	//关闭
	function close_dialog(){
		layer.close(i_search);
	}
	
	function is_login(){
		var data="";
	    $.ajax({
		    type : "post",
		    url : "spring_activity.php?act=is_login",
		    async : false,
		    dataType:'json',
		    success : function(r){
		    	data = r;
		    }
	    });
	    return data;
	}
</script>

<div id="share_dialog" style="display: none;"  >
		<div style="text-align: center; width:100%; font-size:12px;">
			产品分享数额已满，如需更多分享数量，可以推荐代理人
		</div>
		<div style="text-align: center; width:100%; margin-top:20px;">
		
			<a  class="account_on" href="javascript:goto_affiliate();">推 荐</a>
				&nbsp;&nbsp;&nbsp;&nbsp;
			<a  class="account_out"  href="javascript:close_dialog();">关 闭</a>
		</div>
		
</div>
</body>
