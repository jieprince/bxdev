body{ font-size: 12px; color: #333; font-family:"微软雅黑";}
/*==============头部==================*/
.top-line{ width: 100%; height: 30px; border-bottom: 1px solid #008fb5; background: #00a2ca;}
.top-center{ width: 1200px; margin: 0 auto; height: 30px; line-height: 30px; color: #fff;}
.top-center .left{ float: left;}
.top-center .left ul li{ float:left;}
.top-center .left ul li a{ color: #fff;}
.top-center .left ul li a:hover{ color: #f00;}
.top-center .right{ float: right;}
.top-center .right ul{ float: left; margin-left: 20px;} 
.top-center .right ul li{ float: left; width: 85px; text-align: center;} 
.top-center .right ul li a{ color: #fff;}
.top-center .right ul li a:hover{ color: #f00;}
.bg{ width: 100%; background:#00a2ca; height: 124px;}
.bg .center{ width: 1200px; margin: 0 auto;}
.bg .logo{ float: left; padding: 25px 0;}
.bg .sousuo{ float: right; border: none; margin-top: 45px; margin-right: 10px;}
.bg .sousuo .text-search{ float:left;width: 330px; height: 32px; line-height: 32px; background:#008fb5; border: 1px solid #008fb5;}
.bg .sousuo p{ float: left; width: 78px; height: 34px; background: #00bae8; line-height: 34px; text-align: center; color: #fff; font-size: 14px;}
.bg2{ width: 100%; background:#008fb5; clear: both;}
.nav{ width: 1200px; height: 35px; margin:0 auto;}
.nav-left{ float: left; line-height: 34px; height: 34px; font-size: 15px; font-weight: bold; background: #00a2c9; margin-top: 1px; width: 189px; text-align: center; color: #fff;}
.nav-center{ float: left; margin-left: 20px;}
.nav-center ul li{ float: left; width: 136px; text-align: center; height: 35px; line-height: 34px; margin-left: 5px;}
.nav-center ul li a{ width: 136px; line-height: 34px; font-size: 15px; color: #fff; display: block; text-align: center; margin-top: 1px;}
.nav-center ul li a.hover,.nav-center ul li a:hover{ color: #fff; text-decoration: underline; background:#00a2c9;}

/*==============banner==================*/
.mc{ width: 1200px; margin: 0 auto;}
.banner{ float: left; width: 1200px; height: 350px; overflow: hidden; position: relative; margin-top: -3px;}
.banner ol {width: 1200px;position: absolute;z-index: 1;}
.banner ol li {width: 1200px;height: 350px;}
.banner ul{ position: absolute; z-index: 3; bottom: 5px; right: 8px; cursor: pointer;}
.banner ul li{ float: left; width: 20px; height: 20px; background: #000; line-height: 20px; text-align: center; margin-right: 8px; color: #fff; font-size: 14px; }
.banner ul li.light{ background: #b50c0c;}

/*==============列表==================*/
.list{ width: 1200px; margin: 0 auto; margin-top: 8px; }
.list h2{ background: #eee; height: 34px; line-height: 34px; border-left: #00a2ca 3px solid; padding-left: 10px; font-size: 14px; color: #5fb6cc; font-weight: bold;}
.content3{ background: #fff; width: 1198px; height: 220px; border: 1px solid #eee; border-top: none; }
#contents{ height: 203px; width: 1170px; overflow: hidden; padding-top: 20px; margin: 0 auto;}
#contents .scroll{ width: 4340px;}
#contents .scroll div{ float: left;}
.scroll ul li{ float: left; margin-left: 8px;border: 1px solid #ccc;}

.list2{ width: 1200px; margin: 0 auto; margin-top: 8px; }
.list2 h2{ background: #eee; height: 34px; line-height: 34px; border-left: #00a2ca 3px solid; padding-left: 10px; font-size: 14px; color: #5fb6cc; font-weight: bold;}
.list2 .people{ background: #fff; width: 1198px; height: 165px; border: 1px solid #eee; border-top: none; }
.list2 .people dl{ float: left; margin-top: 25px; margin-left: 10px;}
.list2 .people dl dt{ float: left;}
.list2 .people dl dt img{ border: 1px solid #333; padding:1px;}
.list2 .people dl dd{ float: left; margin-left: 8px; margin-top: 28px;}
.list2 .people dl dd ul li{ line-height: 22px;}
.list2 .people dl dd ul li.red{ color: #f00;}





/*==============底部==================*/
.foot{ width: 100%; height: 210px; background: #eee; margin-top: 20px;}
.footer{ width: 1200px; margin: 0 auto;}
.footer dl{float: left;width: 140px; text-align: center; margin-left: 30px; margin-top: 30px;}
.footer dl dt{ font-weight: bold; color: #666;}
.footer dl dd{ line-height: 20px;}
.footer dl dd a{ color: #666;}
.footer dl dd a:hover{ color: #f00;}
.footer2{ width: 1200px; margin: 0 auto; margin-top: 20px;}
.footer2 p{ text-align: center; margin-top: 10px;}





